<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="@string/name_name" />

        <TextView
            android:id="@+id/name_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="@string/name_price" />

        <TextView
            android:id="@+id/price_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2.1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="@string/name_current_quantity" />

        <TextView
            android:id="@+id/current_quantity_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            style="@style/TextStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height_list_item"
            android:text="@string/name_sale_quantity" />

        <TextView
            android:id="@+id/sale_quantity_list_item"
            style="@style/FigureStyleInListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23" />
    </LinearLayout>
    <Button
        android:id="@+id/button_sold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:layout_gravity="center"
        android:text="@string/button_sold"
        android:layout_margin="8dp"/>
</LinearLayout>